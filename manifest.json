{
    "manifest_version": 2,
    "name": "YouTube Controller",
    "version": "1.0",
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "permissions": ["tabs", "storage", "http://*/*", "https://*/*"],
    "commands": {
        "toggle-play-pause": {
          "description": "Play/Pause the video"
        },
        "rewind": {
            "description": "Rewind by 5 seconds"
        },
        "forward": {
            "description": "Forward by 5 seconds"
        }
      },
      "browser_action": {
        "default_popup": "popup.html"
      },      
      "content_scripts": [
        {
          "matches": ["*://*.youtube.com/*"],
          "js": ["content.js"]
        }
      ]
  }